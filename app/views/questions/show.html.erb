<% provide(:page_title, @question.title) %>

<div class="row">
	<div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-justify">
		<h1 class="text-center"><%= @question.title %></h1>
		
		<p class="lead"><%= @question.text %></p>

		<% if @question.user == current_user %>
			<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-info btn-sm' %>
			<%= link_to 'Remove', @question, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
		<% end %>

		<br><br>

	  <%= link_to Upvote_question_path(@question), method: :put, class: 'btn btn-outline-dark btn_sm' do %>
	  	<i class="fas fa-caret-up"></i>
	  	Upvote
	  	<%= @question.get_upvotes.size %>
		<% end %>

	  <%= link_to Downvote_question_path(@question), method: :put, class: 'btn btn-outline-dark btn_sm' do %>
	  	<i class="fas fa-caret-down"></i>
	  	Downvote
	  	<%= @question.get_downvotes.size %>
		<% end %>

	</div>
</div>


