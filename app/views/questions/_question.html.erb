<div class="row">
  <div class="col-sm-6 col-lg-1 text-center votes">
  	<p><%= question.votes_for.size %></p>
  	<small>VOTE(S)</small>
  </div>
  <div class="col-sm-6 col-lg-1 text-center answer">
  	<p><%= question.comments.size %></p>
  	<small>ANSWER(S)</small>
  </div>
  <div class="col-lg-9 offset-lg-1 card-body">
    <h5 class="card-title"><%= link_to question.title, question %></h5>
    <h6 class="published-date">Submitted <%= time_ago_in_words(question.created_at) %> ago by <%= question.user.name %></h6>
  </div>
</div>