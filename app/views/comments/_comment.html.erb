<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.text %></p>
			<p><small>Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.email %></small></p>
		</div>
		<div class="btn-group pull-right">
			<% if comment.user == current_user %>
				<%= link_to 'Edit', edit_comment_path(comment), class: 'btn btn-sm btn-info' %>
				<%= link_to 'Remove', comment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-info' %>
			<% end %>
		</div>
	</div>
<% end %>